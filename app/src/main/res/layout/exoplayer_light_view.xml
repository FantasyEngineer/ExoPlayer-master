<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/base_dimen_160"
    android:layout_height="@dimen/base_dimen_160"
    android:gravity="center"
    android:background="@drawable/translucence_round_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/gestrue_brightness" />

    <TextView
        android:id="@+id/txt_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_10"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_18" />
</LinearLayout>